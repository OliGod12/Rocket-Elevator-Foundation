<!DOCTYPE html>
<html>
  <head>
    <title>Rocket Elevator</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8" />
		<title>Rocket Elevators - Elevate Safety, Speed and Style</title>
		<meta name="description" content="" />
		<meta name="Author" content="Thomas Simoneau" />
		<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600%7CRaleway:300,400,500,600,700%7CLato:300,400,400italic,600,700" rel="stylesheet" type="text/css" />
		<link href="//db.onlinewebfonts.com/c/0e979bd4a3c1c6ac788ed57ac569667f?family=revicons" rel="stylesheet" type="text/css"/>
		<!-- mobile settings -->
		<meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" />
		<!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
		<link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />
		
		<%= javascript_include_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="smoothscroll enable-animation">
	<!-- wrapper -->
		<div id="wrapper">


			<div id="header" class="navbar-toggleable-md sticky header-md clearfix">

				<!-- TOP NAV -->
				<header id="topNav">
					<div class="container">
						

						<!-- Mobile Menu Button -->
						<button class="btn btn-mobile" data-toggle="collapse" data-target=".nav-main-collapse">
							<i class="fa fa-bars"></i>
						</button>

						<!-- Logo -->
						<a class="logo float-left" href="/index">
						<%= image_tag("R2.png", :alt => "") %>
						
						</a>

					
						<div class="navbar-collapse collapse float-right nav-main-collapse submenu-dark">
							<nav class="nav-main">

								
								<ul id="topMain" class="nav nav-pills nav-main nav-onepage">
									<li><!-- HOME -->
										<a href="/index#home">
											HOME
										</a>
									</li>
									<li><!-- SERVICES -->
										
										<a href="index#services">
											SERVICES
											<ul class="dropdown-menu">
												<li><%= link_to "Residential Building", residential_path%></li>
												<li><%= link_to "For Commercial & Corporate Buildings", corporate_path%></li>
												<li><%= link_to "Request a quote", quote_path%></li>
											</ul>

										</a>
									</li>
									<li><!-- PORTFOLIO -->
										<a href="/index#portfolio">
											PORTFOLIO
										</a>
									</li>
									<li><!-- NEWS -->
										<a href="/index#news">
											NEWS
										</a>
									</li>
									<li><!-- CLIENTS -->
										<a href="/index#clients">
											CLIENTS
										</a>
									</li>
									<li><!-- CONTACT -->
										<a href="/index#contact">
											CONTACT
										</a>
									</li>

									<li><!-- ADMIN -->
										
										<% if user_signed_in? %>
										<a>
										ACCOUNT
											<ul class="dropdown-menu">
												<li><%= link_to "ACCOUNT", edit_user_registration_path %></li>
												<li><%= link_to "LOGOUT", destroy_user_session_path %></li>
												<% if current_user.try(:admin?) %>
													<li><a href="/admin">EMPLOYEES</a></li>
													<li><a href="/blazer">GRAPHS</a></li>
												<% end %>
											</ul>
											
										</a>
										<% else %>
										<a>
										ACCOUNT
											<ul class="dropdown-menu">
												<li><%= link_to "SIGN UP", new_user_registration_path%></li>
												<li><%= link_to "LOGIN", new_user_session_path%></li>
											</ul>
										</a>
										<% end %>
									</li>
								</ul>
							</nav>
						</div>
					</div>
					<% flash.each do |type, msg| %>
					<div class="pl-150 pt-10 alert alert-info">
						<%= msg %>
					</div>
					<% end %>
				</header>
				<!-- /Top Nav -->
			</div>
	
    <%= yield %>
	
	
	
				
		
  </body>
</html>